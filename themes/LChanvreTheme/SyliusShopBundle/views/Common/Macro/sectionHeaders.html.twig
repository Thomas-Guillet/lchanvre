{% macro default(header, subheader) %}
    <h2 class="mt-5 mb-3 text-center font-weight-bold">{{ header }}</h2>
    {% if subheader is not empty %}
        <p class="text-muted mb-4">{{ subheader|raw }}</p>
    {% endif %}
{% endmacro %}

{% macro square(header) %}
    <div class="row">
        <h2 class="col-12 mb-3 title-square">
            {{ header }}
        </h2>
    </div>
{% endmacro %}
